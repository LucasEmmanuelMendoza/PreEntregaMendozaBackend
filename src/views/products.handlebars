<div class="bg-success">
    <h1>PRODUCTOS</h1>

    <input type="text" placeholder="id carrito" class="m-2" id="cartId">

    <div class="container d-flex flex-wrap gap-3">
        {{#each products}}
            <div class="card" style="width: 18rem;">
            <img src={{this.thumbnail}} class="card-img-top" alt="...">
            <div class="card-body">
                <h1 class="card-title">{{this.title}}</h1>
                <p class="card-text">{{this.description}}</p>
                <h3 class="card-text">Categoria: {{this.category}}</h3>
                <h4 class="card-text">${{this.price}}</h4>
                <h5 class="card-text">CÃ³digo: {{this.code}}</h5>
                <p class="card-text">Cant: {{this.stock}}</p>
                <p>id:{{this._id}}</p>
                
                <button class="btn btn-primary btnAddToCart" data-id="{{this._id}}">Agregar al carro</button>
            </div>
            </div>
        {{/each}}
    </div>    
</div>

