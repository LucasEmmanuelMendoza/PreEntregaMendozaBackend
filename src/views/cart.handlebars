<div class="container mt-4">
    <div class="row d-flex flex-wrap">
        <div class="col-10 gap-2">
            <table class="table ">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                    </tr>
                </thead>
                {{#each products}}
                <tbody class="m-2">
                    <tr >
                        <th><img src="{{this.product.thumbnail}}" alt="{{this.product.thumbnail}}" style="width:4rem; height:4rem"></th>
                        <td>{{this.product.title}}</td>
                        <td>{{this.product.price}}</td>
                        <td>{{this.quantity}}</td>
                        
                        <td>10000</td>
                    </tr>
                </tbody>
                {{/each}}
            </table>
        </div>

        <div class="col-2">
            <h3>Resumen del pedido</h3>
            <div class="row">
                <div class="col-9">
                    <h5>{{prodsQuantity}} productos</h5>
                </div>
                <div class="col-3">
                    <h4>${{totalPrice}}</h3>
                    <a href='/api/carts/{{cartId}}/purchase' class="btn btn-success">Finalizar Compra</a>
                </div>
            </div>
        </div>
    </div>
</div>
